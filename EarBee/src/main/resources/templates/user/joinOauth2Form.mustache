{{>layouts/header}}

<style>
    body {
        display: grid;
        place-items: center; /* 수평 및 수직 중앙 정렬 */
        min-height: 100vh; /* 화면 높이 전체를 차지하도록 설정 */
        margin: 0;
        background-color: #f0f0f0;
    }

    .form-container {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 1rem;
        max-width: 500px; /* 폼의 최대 너비 설정 */
        width: 100%; /* 폼의 너비를 100%로 설정 */
        padding: 2rem;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .form-container label {
        justify-self: end;
        align-self: center; /* 수직 중앙 정렬 */
    }

    .form-container input, .form-container button {
        width: 100%; /* 입력 필드와 버튼을 그리드 셀의 전체 너비로 확장 */
    }

    .form-container button {
        grid-column: span 2; /* 버튼이 두 열을 차지하게 설정 */
    }

    .phone-container {
        display: flex;
        gap: 0.5rem; /* 입력 필드 사이의 간격 */
    }

    .phone-container input {
        flex: 1;
        text-align: center; /* 입력 필드의 텍스트를 가운데 정렬 */
    }


</style>

<form class="form-container" action="/join" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" value="{{user.username}}">

    <label for="email">Email:</label>
    <input type="email" id="email" name="email">

    <label for="phone">Phone:</label>
    <div class="phone-container">
        <span class="phone-prefix">010</span>
        <input type="text" id="phone-part1" name="phone1" placeholder="1234" maxlength="4" pattern="\d{4}" required>
        <input type="text" id="phone-part2" name="phone2" placeholder="5678" maxlength="4" pattern="\d{4}" required>
    </div>

    <button type="submit">회원가입</button>

    <input type="hidden" name = id value="{{user.id}}">
    <input type="hidden" name = provider value = "{{user.provider}}" >
    <input type="hidden" name = providerId value = "{{user.providerId}}" >

</form>


{{>layouts/footer}}