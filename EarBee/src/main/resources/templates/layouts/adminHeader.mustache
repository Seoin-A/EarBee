{{>layouts/header}}
<script src="/js/admin/admin.js"></script>
<style>
    li {
        display: list-item;
        text-align: -webkit-match-parent;
        unicode-bidi: isolate;
    }
    .btn-toggle {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .btn-toggle::before {
        content: url("/img/admin/allow.svg");
        width: 1.25em;
        height: 1.25em;
        transition: transform .35s ease;
        transform-origin: center;
    }

    .btn-toggle[aria-expanded="true"]::before {
        transform: rotate(90deg); /* 화살표를 오른쪽으로 회전 */
    }
    .btn-toggle-nav {
        padding-left: 1rem; /* 조정할 수 있는 값, 버튼과 리스트 항목의 정렬을 맞추기 */
    }

    /* 리스트 항목의 padding을 조정하여 원하는 위치로 이동 */
    .btn-toggle-nav li {
        padding-left: 1rem; /* 필요에 따라 조정, 리스트 항목이 왼쪽으로 이동하지 않도록 */
    }
    .admin_total {
        display: flex; /* 사이드바와 admin_section을 수평으로 배치 */
        flex: 1; /* 남은 공간을 차지하도록 설정 */
        height: 100vh; /* 전체 화면 높이 설정 */
    }

    .sidebar {
        width: 280px; /* 사이드바의 고정 너비 */
        background-color: #ffffff; /* 배경색 설정 */
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1); /* 사이드바 그림자 */
        overflow-y: auto; /* 내용이 많을 경우 스크롤 가능 */
    }

    .admin_section {
        flex: 1; /* 사이드바 옆의 남은 공간을 차지하도록 설정 */
        padding: 20px; /* 필요에 따라 패딩 추가 */
        background-color: #f8f9fa; /* 배경색 설정, 필요에 따라 조정 */
        overflow: auto; /* 내용이 많을 경우 스크롤 가능 */
    }

    .rounded{
        margin-top: 3px;

    }

</style>



