<!DOCTYPE html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Hello, world!</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 모달 객체를 선택합니다.
            var modalElement = document.getElementById('loginModal');
            var modal = new bootstrap.Modal(modalElement);

            // 모달이 열릴 때 키보드 이벤트 리스너를 추가합니다.
            modalElement.addEventListener('shown.bs.modal', function () {
                document.addEventListener('keydown', handleKeyDown);
            });

            // 모달이 닫힐 때 키보드 이벤트 리스너를 제거합니다.
            modalElement.addEventListener('hidden.bs.modal', function () {
                document.removeEventListener('keydown', handleKeyDown);
            });

            function handleKeyDown(event) {
                if (event.key === 'Enter') {
                    login();
                    event.preventDefault(); // 기본 동작 방지
                }
            }
        });

        function showLogin() {
            var myModal = new bootstrap.Modal(document.getElementById('loginModal'));
            myModal.show();
        }

        function login() {
            const id = document.getElementById("id").value;
            const password = document.getElementById("password").value;

            fetch(("/api/login"),{
                method: "POST",
                headers: {
                    "Content-Type" : "application/json",
                    "X-Requested-With":"XMLHttpRequest"
                },
                body:JSON.stringify({"id":id,
                    "password":password}),
            })
            .then(response => {
                if(response.ok)window.location.replace("/");
            })
            .catch(error =>{

                console.error("Error during login:",error);
            });
        }

    </script>
    <style>
        html, body {
            height: 100%; /* 전체 높이 설정 */
            margin: 0;
            padding: 0;
        }
        body {
            display: flex;
            flex-direction: column; /* 세로로 정렬 */
            min-height: 100vh; /* 전체 높이 */
            background-color: #f0f0f0; /* 배경색 */
        }
        .header {
            flex-shrink: 0; /* 헤더의 크기를 고정 */
        }
        .main-section {
            flex: 1; /* 남은 공간을 차지하도록 설정 */
            width: 100%; /* 전체 너비의 80% */
            margin: 0 auto; /* 중앙 정렬 */
            display: flex;
            flex-direction: column; /* 세로로 정렬 */
            gap: 20px; /* 섹션 간의 간격 */
        }
        .modal-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem; /* 열 간의 간격 */
        }
        .modal-form {
            display: flex;
            flex-direction: column;
        }
        .modal-form div {
            margin-bottom: 1rem;
        }
        .modal-form label {
            display: block;
            margin-bottom: 0.5rem;
        }
        .modal-form input {
            width: 100%;
            padding: 0.5rem;
        }
        .modal-form a {
            margin-top: 0.5rem; /* 폼과 링크 사이에 간격 추가 */
            align-self: flex-end; /* 링크를 오른쪽 끝으로 이동 */
        }
        .modal-social {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .modal-social img {
            max-width: 100%;
            height: auto;
        }
        .header-title {
            border-top: 1px solid black;
            border-bottom: 1px solid black;
        }
        .earbee {
            text-align: center;
            max-height: 150px;
        }
        .custom-navbar {
            font-family: 'Arial', sans-serif; /* 폰트 패밀리 설정 */
            font-size: 20px; /* 폰트 크기 설정 */
            color: #333; /* 폰트 색상 설정 */
        }


    </style>
</head>
