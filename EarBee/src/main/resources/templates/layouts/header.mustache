    <style>

        .carousel-item img {
            max-width: 100%; /* 이미지의 최대 너비를 부모 요소의 너비에 맞춤 */
            max-height: 280px; /* 이미지의 최대 높이를 300px로 제한 (원하는 크기로 변경 가능) */
            height: auto; /* 가로 비율을 유지한 채 이미지 높이를 자동으로 조정 */
            width: auto;
            margin-left: 0.5rem;
            margin-right: 0.5rem;
        }
        .modal-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem; /* 열 간의 간격 */
        }

        .modal-form {
            display: flex;
            flex-direction: column;
        }

        .modal-form div {
            margin-bottom: 1rem;
        }

        .modal-form label {
            display: block;
            margin-bottom: 0.5rem;
        }

        .modal-form input {
            width: 100%;
            padding: 0.5rem;
        }
        .modal-form a {
            margin-top: 0.5rem; /* 폼과 링크 사이에 간격 추가 */
            align-self: flex-end; /* 링크를 오른쪽 끝으로 이동 */
        }

        .modal-social {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .modal-social img {
            max-width: 100%;
            height: auto;
        }

        .login{
            font-size: 1rem;
        }
        .header-title{
            border-top-color: black;
            border-bottom-color: black;

        }
        .earbee{
            text-align: center;
            max-height: 150px;
        }


    </style>
</head>
<body>

<header class = "container-fluid">
