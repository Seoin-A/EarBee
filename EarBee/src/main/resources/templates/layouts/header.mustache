    <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Login</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="modal-grid">
                        <div class="modal-form">
                            <form id = "loginForm" action="/login-process" method="post">
                                <div>
                                    <label for="id">ID</label>
                                    <input id="id" name="id" type="text">
                                </div>
                                <div>
                                    <label for="password">Password</label>
                                    <input id="password" name="password" type="password">
                                </div>
                            </form>
                            <a href="/join">회원가입</a>
                        </div>
                        <div class="modal-social">
                            <a href="/oauth2/authorization/google">
                                <img src="/img/oauth2/googleOauth2.png" alt="구글 로그인">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" onclick="login()">로그인</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
                </div>
            </div>
        </div>
    </div>
</header>

<script>


    document.addEventListener('DOMContentLoaded', function () {
        // 모달 객체를 선택합니다.
        var modalElement = document.getElementById('loginModal');
        var modal = new bootstrap.Modal(modalElement);

        // 모달이 열릴 때 키보드 이벤트 리스너를 추가합니다.
        modalElement.addEventListener('shown.bs.modal', function () {
            document.addEventListener('keydown', handleKeyDown);
        });

        // 모달이 닫힐 때 키보드 이벤트 리스너를 제거합니다.
        modalElement.addEventListener('hidden.bs.modal', function () {
            document.removeEventListener('keydown', handleKeyDown);
        });

        function handleKeyDown(event) {
            if (event.key === 'Enter') {
                login();
                event.preventDefault(); // 기본 동작 방지
            }
        }});


    function showLogin() {
        var myModal = new bootstrap.Modal(document.getElementById('loginModal'));
        myModal.show();
    }

    function login(){
        var form = document.getElementById('loginForm');
        form.submit();
    }
</script>


